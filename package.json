{
  "name": "keepa-node-api",
  "version": "0.1.0",
  "description": "Keepa API library for Node.js",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rm -rf ./lib/",
    "lint": "eslint ./src/ --fix",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "test:watch": "vitest --watch",
    "test": "vitest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reedom/keepa-node-api.git"
  },
  "license": "MIT",
  "author": {
    "name": "HANAI, Tohru",
    "email": "tohru@reedom.com",
    "url": "https://github.com/reedom"
  },
  "engines": {
    "node": ">=20.0"
  },
  "keywords": [
    "boilerplate",
    "template",
    "typescript",
    "vscode",
    "jest",
    "husky",
    "semantic-release",
    "codecov"
  ],
  "bugs": {
    "url": "https://github.com/reedom/keepa-node-api/issues"
  },
  "homepage": "https://github.com/reedom/keepa-node-api#readme",
  "devDependencies": {
    "@ryansonshine/cz-conventional-changelog": "^3.3.4",
    "@types/google-apps-script": "^1.0.95",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "axios": "^1.7.9",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.2.1",
    "semantic-release": "^21.0.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.2.4",
    "vite": "^6.1.0",
    "vitest": "^3.0.5",
    "vitest-mock-extended": "^2.0.2"
  },
  "peerDependencies": {
    "axios": "*"
  },
  "peerDependenciesMeta": {
    "axios": {
      "optional": true
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
